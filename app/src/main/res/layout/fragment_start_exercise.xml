<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartExerciseFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_blue"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_gradient"
        android:alpha="0.5"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textView_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reach_your_new_best_today"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:layout_marginBottom="130dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"/>

        <TextView
            android:id="@+id/textView_tagline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/because_every_champion_needs_their_app"
            app:layout_constraintTop_toBottomOf="@id/textView_tagline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_startExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="START"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingVertical="15dp"
            app:cornerRadius="20dp"
            android:paddingHorizontal="40dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView_tagline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>